<div class="panel-hotel-style ">
  <div class="hotel-style-container row no-padding">
  <div class="hotel-style-name">
    <p><%= style.name %></p>
  </div>
    <div class="tag-panel row">
      <div class="col-sm-10 col-sm-offset-1">
        <div class="tag-container row">
          <div class="col-sm-10 no-padding">
            <div class="tag-box" id="tag-box-div">
              <input type="text" class="tag-box" id="tag-box-<%= style.id %>"/>
              <%= javascript_tag do %>
                $('#tag-box-<%= style.id %>').tagsinput({
                  itemValue: 'id',
                  itemText: 'value'
                });
              <% end %>
              <% ambiances = style.ambiance_list %>
              <% ambiances.each_with_index do |ambiance, index| %>
                <%= javascript_tag do %>
                  $('#tag-box-<%= style.id %>').tagsinput('add', { id: '<%= index %>', value: '<%= ambiance %>' });
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="col-sm-2 no-padding">
            <a href="/hotels?predefined=<%= style.url %>" class="btn btn-info btn-see-more pull-right">See more...</a>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div>
        <% hotels = @recomendations[style.name]['result'] %>
        <div class= "hotels-display row">
          <% hotels.each do |hotel| %>
            <div class="col-sm-4 hotel-widget">
              <%= render('layouts/hotel_widget.html.erb', hotel: hotel) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>